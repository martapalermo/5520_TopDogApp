<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faeee1">


    <TextView
        android:id="@+id/welcome_msg"
        android:layout_width="391dp"
        android:layout_height="56dp"
        android:text="@string/welcome_msg"
        android:textAlignment="center"
        android:textColor="#583400"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pats_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <TextView
        android:id="@+id/pats_msg"
        android:layout_width="386dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="You have pats"
        android:textAlignment="center"
        android:textColor="#583400"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_msg"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/myProfile_btn"
        android:layout_width="182dp"
        android:layout_height="183dp"
        android:backgroundTint="#800000"
        android:contentDescription="@string/profile_picture_button_that_leads_to_profile"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@id/myStats_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:srcCompat="@drawable/petprofilebtn" />

    <ImageButton
        android:id="@+id/myStats_btn"
        android:layout_width="182dp"
        android:layout_height="183dp"
        android:backgroundTint="#800000"
        android:contentDescription="@string/button_to_stats_page"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/myProfile_btn"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:layout_constraintVertical_bias="0.488"
        app:srcCompat="@drawable/statsbtn" />

    <ImageButton
        android:id="@+id/leaderboard_btn"
        android:layout_width="182dp"
        android:layout_height="183dp"
        android:backgroundTint="#800000"
        android:contentDescription="@string/profile_picture_button_that_leads_to_profile"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@id/letsWalk_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline7"
        app:srcCompat="@drawable/leaderboardbtn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <ImageButton
        android:id="@+id/letsWalk_btn"
        android:layout_width="182dp"
        android:layout_height="183dp"
        android:backgroundTint="#800000"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@id/leaderboard_btn"
        app:layout_constraintTop_toBottomOf="@id/guideline7"
        app:srcCompat="@drawable/letswalkbtn" />

    <Button
        android:id="@+id/notifcationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Walk Reminder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintVertical_bias="0.318" />


</androidx.constraintlayout.widget.ConstraintLayout>